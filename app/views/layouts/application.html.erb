<!DOCTYPE html>
<html>
  <head>
    <title>TweetTweet</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
 

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Home", root_path, class: "navbar-brand" %>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to "Compose New Tweet", new_tweet_path %></li>

          <li><%= link_to "All Tweets", tweets_path %></li>

          <li><%= link_to "All Users", all_users_path %></li>

          <li><%= link_to "Sign In", new_user_session_path %></li>

      

          <li><a href="http://localhost:3000/tweets/new"><i class="fa fa-pencil-square-o fa-2x" aria-hidden="true"></i></a></li>

        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <% if current_user.avatar.blank? == false %>
                  <%= image_tag current_user.avatar.url, size:25, class: "user-pic-nav", class: "img-circle" %>
                <% end %>
                @<%= current_user.username %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>	

<div class="container">
  <% if user_signed_in? %>
    <div class="col-md-3">
      <div class="panel panel-info">
        <center><div class="panel-body">
          <%= image_tag @current_user.avatar.thumb, class: "img-circle" %>
          <br />
          <strong><%= @current_user.name %></strong>
          <br />
          <strong><i class="fa fa-user" aria-hidden="true"></i>@<%= @current_user.username %></strong>
          <br />
          <strong><i class="fa fa-map-marker" aria-hidden="true"></i> <%= @current_user.location %></strong>
          <br />
          <strong><i class="fa fa-book" aria-hidden="true"></i><%= @current_user.bio %></strong>
                </div></center>
      </div>
    </div>


    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-body">
          <%= yield %>
        </div>
      </div>
    </div> 

    <div class="col-md-3">
      <div class="panel panel-info">
        <div class="panel-body">

        </div>
      </div>
    </div>

  <% else %>
    <%= yield %>
  <% end %>
</div>
   


  


  </body>
</html>



